@model BlogPost
@{
    ViewData["Title"] = Model.Title;
}

<article class="container">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <h1 class="display-4">@Model.Title</h1>
            <p class="text-muted">👤 @Model.Author</p>
            <p class="text-muted">📅 @Model.PublishedDate</p>
            <p class="post-text">@Model.Text</p>
        </div>
        <div class="col-xs-12 col-md-6">
            <img class="img-fluid" src="@Model.ImageUrl" alt="@Model.ImageUrl" title="@Model.ImageUrl" />
        </div>
    </div>
</article>
